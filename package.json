{
  "name": "mcp-dashboard",
  "version": "0.2.1",
  "description": "GUI tool for managing Claude Code MCP settings",
  "bin": {
    "mcp-dashboard": "./bin/cli.js"
  },
  "main": "./dist/server/index.js",
  "type": "module",
  "files": [
    "bin/",
    "dist/",
    "src/images/icon.png",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "cd src/client && vite",
    "build": "npm run build:server && npm run build:client && npm run copy:presets",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "cd src/client && vite build",
    "copy:presets": "shx mkdir -p dist/presets && shx cp -r src/presets/* dist/presets/",
    "start": "node dist/server/index.js",
    "test": "jest",
    "lint": "tsc --noEmit -p tsconfig.server.json",
    "format": "prettier --write src/**/*.{ts,tsx}"
  },
  "keywords": [
    "mcp",
    "claude",
    "claude-code",
    "gui",
    "config",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "body-parser": "^1.20.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "open": "^9.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.66.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.1.0",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.5",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^29.5.11",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "prettier": "^3.7.4",
    "shx": "^0.4.0",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
