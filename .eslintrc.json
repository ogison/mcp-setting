{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es2020": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "no-console": "off",
    "no-unused-vars": "off",
    "no-undef": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "coverage/",
    "*.config.js",
    "*.config.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
